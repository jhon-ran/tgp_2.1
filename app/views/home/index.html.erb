<h1>Gossips Home</h1>

<%= link_to 'New Gossip', new_gossip_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gossips.each do |gossip| %>
      <tr>
        <td><%= gossip.title %></td>
        <td><%= gossip.text %></td>
        <td><%= link_to 'Show', gossip %></td>
        <td><%= link_to 'Edit', edit_gossip_path(gossip) %></td>
        <td><%= link_to 'Destroy', gossip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<h1>Latests Gossips</h1>
 

<table>
  <tr>
    <th>User</th>
    <th>City</th>
    <th></th>
    <th>Title</th>
    <th>Gossip</th>
    <th colspan="4"></th>
  </tr>
  <% @gossips.each do |gossip| %>
    <tr>
      <td><%= gossip.user.first_name %></td>
      <td><%= gossip.user.city.name %></td>
      <td><%= link_to 'See user', user_path(gossip.user)%></td>

      <td><%= gossip.title %></td>
      <td><%= gossip.text %></td>
    
    
      <td><%= link_to 'Show', gossip_path(gossip) %></td>
      <td><%= link_to 'Edit', edit_gossip_path(gossip) %></td>
      <td><%= link_to 'Destroy', gossip_path(gossip),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

  <% end %>
</table>

